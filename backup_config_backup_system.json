{
  "backup": {
    "schedule": {
      "full": "0 2 * * 0",
      "incremental": "0 2 * * 1-6",
      "log": "0 */4 * * *"
    },
    "retention": {
      "daily": 30,
      "weekly": 12,
      "monthly": 12,
      "yearly": 5
    },
    "encryption": {
      "enabled": true,
      "algorithm": "AES-256",
      "key_rotation": true
    },
    "verification": {
      "enabled": true,
      "test_restore": true,
      "integrity_check": true
    }
  }
}