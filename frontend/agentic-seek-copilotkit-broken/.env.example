# AgenticSeek CopilotKit Environment Configuration
# Copy this file to .env and fill in your actual values

# CopilotKit Backend Configuration
REACT_APP_COPILOTKIT_API_URL=http://localhost:8000/api/copilotkit
REACT_APP_COPILOTKIT_WS_URL=ws://localhost:8000/api/copilotkit/ws
REACT_APP_COPILOTKIT_PUBLIC_API_KEY=your_copilotkit_public_key_here

# AgenticSeek Backend Configuration
REACT_APP_BACKEND_URL=http://localhost:8000
REACT_APP_WS_ENDPOINT=ws://localhost:8000
REACT_APP_API_VERSION=v1

# Tier Configuration
REACT_APP_DEFAULT_TIER=free
REACT_APP_ENABLE_TIER_VALIDATION=true
REACT_APP_ENABLE_UPGRADE_PROMPTS=true

# Feature Flags
REACT_APP_ENABLE_VIDEO_GENERATION=true
REACT_APP_ENABLE_APPLE_SILICON_OPTIMIZATION=true
REACT_APP_ENABLE_ADVANCED_WORKFLOWS=true
REACT_APP_ENABLE_AGENT_COMMUNICATION_FEED=true
REACT_APP_ENABLE_REAL_TIME_METRICS=true

# Development Configuration
REACT_APP_DEBUG_MODE=true
REACT_APP_LOG_LEVEL=debug
REACT_APP_ENABLE_PERFORMANCE_MONITORING=true
REACT_APP_ENABLE_ERROR_REPORTING=true

# Production Configuration (Override in production)
REACT_APP_PRODUCTION_URL=https://your-production-domain.com
REACT_APP_PRODUCTION_WS_URL=wss://your-production-domain.com/ws
REACT_APP_SENTRY_DSN=your_sentry_dsn_here
REACT_APP_ANALYTICS_ID=your_analytics_id_here

# Apple Silicon Optimization
REACT_APP_ENABLE_NEURAL_ENGINE=true
REACT_APP_ENABLE_GPU_ACCELERATION=true
REACT_APP_HARDWARE_MONITORING_INTERVAL=1000

# Video Generation Configuration
REACT_APP_MAX_VIDEO_DURATION=300
REACT_APP_SUPPORTED_VIDEO_FORMATS=mp4,mov,avi
REACT_APP_VIDEO_QUALITY_OPTIONS=720p,1080p,4K

# Agent Configuration
REACT_APP_MAX_AGENTS_FREE=2
REACT_APP_MAX_AGENTS_PRO=5
REACT_APP_MAX_AGENTS_ENTERPRISE=20
REACT_APP_AGENT_UPDATE_INTERVAL=5000

# WebSocket Configuration
REACT_APP_WS_RECONNECT_ATTEMPTS=5
REACT_APP_WS_RECONNECT_INTERVAL=3000
REACT_APP_WS_HEARTBEAT_INTERVAL=30000

# Security Configuration
REACT_APP_ENABLE_CSRF_PROTECTION=true
REACT_APP_SESSION_TIMEOUT=3600000
REACT_APP_TOKEN_REFRESH_INTERVAL=300000

# UI Configuration
REACT_APP_THEME=dark
REACT_APP_PRIMARY_COLOR=#1976d2
REACT_APP_SECONDARY_COLOR=#dc004e
REACT_APP_ENABLE_ANIMATIONS=true
REACT_APP_SIDEBAR_DEFAULT_OPEN=true

# Performance Configuration
REACT_APP_CHART_UPDATE_INTERVAL=1000
REACT_APP_METRICS_BUFFER_SIZE=100
REACT_APP_LAZY_LOADING_THRESHOLD=10
REACT_APP_VIRTUALIZATION_THRESHOLD=50

# Testing Configuration
REACT_APP_ENABLE_TEST_MODE=false
REACT_APP_MOCK_BACKEND=false
REACT_APP_TEST_USER_ID=test_user_001
REACT_APP_TEST_USER_TIER=enterprise