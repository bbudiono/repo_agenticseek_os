# Production Environment Variables for CopilotKit Backend
# Copy this file to production.env and update with actual values

# === CORE APPLICATION SETTINGS ===
COPILOTKIT_ENV=production
DEBUG=false
LOG_LEVEL=INFO
SECRET_KEY=your-super-secret-key-change-this-in-production
JWT_SECRET=your-jwt-secret-key-change-this-in-production

# === DATABASE CONFIGURATION ===
DB_PASSWORD=your-secure-database-password
POSTGRES_URL=postgresql://copilotkit:${DB_PASSWORD}@postgres:5432/copilotkit

# === REDIS CONFIGURATION ===
REDIS_PASSWORD=your-secure-redis-password
REDIS_URL=redis://:${REDIS_PASSWORD}@redis:6379

# === API KEYS (REQUIRED) ===
OPENAI_API_KEY=sk-your-openai-api-key
ANTHROPIC_API_KEY=sk-ant-your-anthropic-key
PERPLEXITY_API_KEY=pplx-your-perplexity-key

# === TIER MANAGEMENT ===
STRIPE_SECRET_KEY=sk_live_your-stripe-secret-key
STRIPE_WEBHOOK_SECRET=whsec_your-webhook-secret
TIER_ENFORCEMENT=strict

# === SECURITY SETTINGS ===
ALLOWED_ORIGINS=https://yourdomain.com,https://app.yourdomain.com
CORS_CREDENTIALS=true
RATE_LIMIT_ENABLED=true
RATE_LIMIT_PER_MINUTE=100
RATE_LIMIT_BURST=20

# === MONITORING & LOGGING ===
GRAFANA_PASSWORD=your-secure-grafana-password
PROMETHEUS_RETENTION=30d
LOG_RETENTION_DAYS=90
METRICS_ENABLED=true
TRACING_ENABLED=true

# === WEBSOCKET SETTINGS ===
WEBSOCKET_MAX_CONNECTIONS=1000
WEBSOCKET_HEARTBEAT_INTERVAL=30
WEBSOCKET_TIMEOUT=300

# === PERFORMANCE SETTINGS ===
WORKER_PROCESSES=4
WORKER_CONNECTIONS=1000
MAX_REQUESTS_PER_WORKER=10000
CACHE_TTL=3600
AGENT_POOL_SIZE=50

# === APPLE SILICON OPTIMIZATION ===
ENABLE_NEURAL_ENGINE=true
ENABLE_GPU_ACCELERATION=true
THERMAL_MANAGEMENT=enabled
PERFORMANCE_MODE=balanced

# === VIDEO GENERATION (Enterprise) ===
VIDEO_STORAGE_PATH=/app/data/videos
VIDEO_MAX_DURATION=600
VIDEO_QUALITY_DEFAULT=1080p
VIDEO_PROCESSING_TIMEOUT=1800

# === BACKUP & RECOVERY ===
BACKUP_ENABLED=true
BACKUP_SCHEDULE=0 2 * * *
BACKUP_RETENTION_DAYS=30
S3_BACKUP_BUCKET=your-backup-bucket
AWS_ACCESS_KEY_ID=your-aws-access-key
AWS_SECRET_ACCESS_KEY=your-aws-secret-key

# === ERROR HANDLING ===
ERROR_REPORTING_ENABLED=true
SENTRY_DSN=https://your-sentry-dsn@sentry.io/project-id
ERROR_AGGREGATION_WINDOW=300
MAX_ERROR_REPORTS_PER_HOUR=100

# === FEATURE FLAGS ===
ENABLE_ADVANCED_ANALYTICS=true
ENABLE_EXPERIMENTAL_FEATURES=false
ENABLE_DEBUG_ENDPOINTS=false
ENABLE_HEALTH_CHECKS=true

# === DEPLOYMENT INFO ===
DEPLOYMENT_VERSION=1.0.0
DEPLOYMENT_ENVIRONMENT=production
DEPLOYMENT_TIMESTAMP=2025-06-03T00:00:00Z
BUILD_SHA=placeholder-build-sha